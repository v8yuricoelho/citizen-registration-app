<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:full_name_cont, class: 'form-control', placeholder: 'Nome do munícipe') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:cpf_cont, class: 'form-control', placeholder: 'CPF do munícipe') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.select :status_eq, options_for_select(Citizen.statuses), {include_blank: 'Status' }, class: 'form-control' %>
    </div>

     <div class="form-group col-2">
        <%= f.label "" %>
        <%= f.select :address_uf_eq, options_for_select(Address.ufs), { include_blank: 'UF' }, class: 'form-control' %>
      </div>

      <div class="form-group col-2">
        <%= f.submit 'Buscar', class: 'btn btn-dark shadow-sm mt-4'  %>
      </div>
  </div>
<% end %>